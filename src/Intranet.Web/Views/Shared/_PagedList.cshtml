@model IPagedList
<div class="row">
    <div class="col-xs-8">
        <input type="hidden" name="Page" id="Page" value="@Model.PageNumber" />@*@Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)*@
        @Html.PagedListPager(Model, page => "#" + page, PagedListRenderOptions.ClassicPlusFirstAndLast)
    </div>
    <div class="col-xs-4">
        <div class="pagination-container">
            <div class="pull-right">
                <div class="pagination">
                    <div class="pull-right">@Html.DropDownList("PageSize", new List<int> { 10, 25, 50, 100, 200, 500, 1000 }.Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString(), Selected = i == Model.PageSize }), new { @class = "form-control" })</div>
                    <div class="pull-right" style="margin-top: 6px">@Model.FirstItemOnPage - @Model.LastItemOnPage of @Model.TotalItemCount &nbsp;</div>
                </div>
            </div>
        </div>
    </div>
</div>