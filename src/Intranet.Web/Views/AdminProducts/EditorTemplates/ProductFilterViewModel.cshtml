@using Zek.Model.ViewModel.Production
@model ProductFilterViewModel
<div class="form-group">
    <label asp-for="Id" class="col-sm-3 control-label"></label>
    <div class="col-sm-9">
        <input asp-for="Id" class="form-control" autofocus />
    </div>
</div>
<div class="form-group">
    <label asp-for="Name" class="col-sm-3 control-label"></label>
    <div class="col-sm-9">
        <input asp-for="Name" class="form-control" />
    </div>
</div>
<div class="form-group">
    <label asp-for="ProductNumber" class="col-sm-3 control-label"></label>
    <div class="col-sm-9">
        <input asp-for="ProductNumber" class="form-control" />
    </div>
</div>
<div class="form-group">
    <label asp-for="CategoryId" class="col-sm-3 control-label"></label>
    <div class="col-sm-9">
        <select asp-for="CategoryId" class="form-control" asp-items="@Model?.Categories" data-target="#@nameof(ProductFilterViewModel.SubCategoryId)" data-url="@Url.Action(nameof(AdminProductsController.GetSubCategories))">
            <option>&nbsp;</option>
        </select>
    </div>
</div>
<div class="form-group">
    <label asp-for="SubCategoryId" class="col-sm-3 control-label"></label>
    <div class="col-sm-9">
        <select asp-for="SubCategoryId" class="form-control" asp-items="@Model?.SubCategories">
            <option>&nbsp;</option>
        </select>
    </div>
</div>